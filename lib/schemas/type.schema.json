{
  "$id": "https://bridge.svt.se/schemas/type",
  "$schema": "http://json-schema.org/draft-07/schema",
  "$defs": {
    "property": {
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "enum": ["string", "number", "group"]
        },
        "name": {
          "type": "string"
        },
        "bind": {
          "type": "string"
        },
        "properties": {
          "type": "array",
          "items": {
            "$ref": "#/$defs/property"
          }
        }
      },
      "required": [ "type" ]
    }
  },
  "title": "Type",
  "description": "The declaration of a type",
  "type": "object",
  "properties": {
    "id": {
      "type": "string",
      "description": "A unique identifier for the type"
    },
    "inherits": {
      "type": "string",
      "description": "Inherit fields from another type"
    },
    "name": {
      "type": "string",
      "description": "A human readable name of the type, if omitted, this type won't be shown in the interface"
    },
    "properties": {
      "type": "array",
      "items": {
        "$ref": "#/$defs/property"
      }
    }
  },
  "oneOf": [
    { "required": [ "id" ] },
    { "required": [ "extends" ] }
  ]
}